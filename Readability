#include <cs50.h>
#include <stdio.h>
#include <string.h>
#include <ctype.h>
#include <math.h>

int main(void)
{
    string s = get_string("Text: ");
    int letter = 0;
    for(int i=0; s[i] !=0; i++)
    {
       if(isalpha(s[i]))
       {
           letter++;
       }
    }
    
    int word = 1;
    int j = 0;
    while(s[j]!=0)
    {
        if(s[j] == ' ')
        {
            word++;
        }
        j++;
    }
    
   
   int sentence = 0;
   int k=0;
   while(s[k]!=0)
   {
       if(s[k] == '.' || s[k] == '!' || s[k] == '?')
       {
           sentence++;
       }
       k++;
   }
    
    
    float index = .0588*(letter*100)/word - .296*(sentence*100)/word - 15.8;
    int grade = round(index); 
    if(grade >= 16)
    {
        printf("Grade 16+\n");
    }
    else if (grade <1)
    {
        printf("Before Grade 1\n");
    }
    else
    {
        printf("Grade %i\n", grade);
    }
    
}
